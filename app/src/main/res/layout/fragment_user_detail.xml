<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  app:layout_behavior="@string/appbar_scrolling_view_behavior"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="@dimen/tw__card_spacing_small"
  >
  <RelativeLayout
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
  <android.support.v7.widget.AppCompatImageView
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:id="@+id/icon_user"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="@string/loading_user"
    android:id="@+id/user_name"
    android:layout_below="@+id/icon_user"
    android:layout_centerHorizontal="true"
    />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/screen_name"
    android:layout_below="@+id/user_name"
    android:layout_centerHorizontal="true"
    />

  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/description"
    android:layout_below="@+id/screen_name"
    android:layout_centerHorizontal="true"
    />
    <android.support.v7.widget.LinearLayoutCompat
      android:layout_below="@id/description"
      android:layout_width="match_parent"
      android:layout_height="@dimen/tw__login_btn_height"
      android:layout_centerHorizontal="true"
      >
      <com.klinker.android.link_builder.LinkConsumableTextView
        android:id="@+id/following_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        />
      <com.klinker.android.link_builder.LinkConsumableTextView
        android:id="@+id/followed_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        />
    </android.support.v7.widget.LinearLayoutCompat>
  </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
