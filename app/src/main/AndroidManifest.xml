<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="xyz.donot.twix">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.VIBRATE" />

  <application
    android:name=".Twix"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity
      android:name=".view.activity.InitialActivity"
      android:label="@string/title_activity_initial"
      android:theme="@style/AppTheme.NoActionBar" />

    <meta-data
      android:name="io.fabric.ApiKey"
      android:value="6a54bc1be9e7f263796a0d1ea143f2f29dcbd3fe" />

    <activity
      android:name=".view.activity.MainActivity"
      android:label="@string/title_activity_main"
      android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity
      android:name=".view.activity.AccountSettingActivity"
      android:label="@string/title_activity_account_setting"
      android:theme="@style/AppTheme.NoActionBar" />
    <activity
      android:name=".view.activity.SettingsActivity"
      android:label="@string/title_activity_settings" />
    <activity
      android:name=".view.activity.PictureActivity"
      android:label="@string/title_activity_picture"
      android:theme="@style/AppTheme.NoActionBar" />
    <activity
      android:name=".view.activity.UserActivity"
      android:label="@string/title_activity_scrolling"
      android:theme="@style/AppTheme.NoActionBar" />
  </application>

</manifest>
